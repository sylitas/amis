body#page-top
  // Page Wrapper
  #wrapper
    // Sidebar
    include sidebar.role.pug
    // End of Sidebar
    // Content Wrapper
    #content-wrapper.d-flex.flex-column
      // Main Content
      #content
        // Topbar
        include topbar.role.pug
        // End of Topbar
        // Begin Page Content
        .container-fluid#noPadding
          .card#card1
            .card-header
              h4.mt-0.font-weight-bold.text-primary Roles
              .row
                .col-12#paddingTop
                  button#add.btn.btn-light.btn-icon-split(data-toggle='modal' data-target='#addRole')
                    span.icon.text-gray-600
                      i.fas.fa-plus
                    span.text Create
                  button#edit.btn.btn-light.btn-icon-split(data-toggle='modal' data-target='#editer')
                    span.icon.text-gray-600
                      i.fas.fa-edit
                    span.text Edit
                  button#delete.btn.btn-light.btn-icon-split
                    span.icon.text-gray-600
                      i.fas.fa-trash
                    span.text Delete
                  button#reload.btn.btn-light.btn-icon-split
                    span.icon.text-gray-600
                      i.fas.fa-sync
                    span.text Reload
                  span.text |   
                  button#grantPermission.btn.btn-light.btn-icon-split(data-toggle='modal' data-target='#grant')
                    span.icon.text-gray-600
                      i.fas.fa-network-wired
                    span.text Grant Permision
                  span.text | 
                  button#export.btn.btn-light.btn-icon-split
                    span.icon.text-gray-600
                      i.fas.fa-file-export
                    span.text Export
            .card-body.card-body-1
              .table-responsive
                table#dataTable-Role.table.table-bordered.nowrap.hover.row-border.order-column.compact.cell-border(width='100%' cellspacing='0')
                  thead
                    tr
                      th(width='10%') Code
                      th(width='20%') Role
                      th(width='70%') Description
          .card#card2
            .card-header
              h4.m-0.font-weight-bold.text-primary Role's members
            .card-body.card-body-2
              .table-responsive
                table#dataTable-contained.table.table-bordered.nowrap.hover.row-border.order-column.compact.cell-border(width='100%' cellspacing='0')
                  thead
                    tr
                      th(width="5%") Member Code
                      th(width="20%") Member's username
                      th(width="20%") Full Name
                      th(width="10%") Title
                      th(width="25%") Work At
                      th(width="20%") Description
            .card-footer
              .row
                .col-12
                  a#addMember.btn.btn-light.btn-icon-split(href="#" data-toggle='modal' data-target='#addUser')
                    span.icon.text-gray-600
                      i.fas.fa-plus
                    span.text Add
                  a#deleteUserInRole.btn.btn-light.btn-icon-split(href="#")
                    span.icon.text-gray-600
                      i.fas.fa-trash
                    span.text Remove
  .invisible_div
    p#check_use=use
    p#check_add=add
    p#check_edit=edit
    p#check_del=del
    p#check_export=exp
  //modal for create a new role
  #addRole.modal(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Role Creater
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          form#addingRole()
            .row
              .col-4
                p Role (<b style="color:red">*</b>)
              .col-8
                .input-group
                  input(name="role" type="text" style={width:"100%"} placeholder="Role's name")
            .row
              .col-4
                p Description
              .col-8
                .input-group
                  textarea(name="note", cols="50", rows="7" placeholder="Note")
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
          button#submitAddingRole.btn.btn-primary(type="submit" form="addingRole") Save
      // End of Footer
    // End of Content Wrapper
  //modal for edit role
  #editer.modal(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Role Editer
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          form#editRole()
            .row
              .col-4
                p Role (<b style="color:red">*</b>)
              .col-8
                .input-group
                  input#inputNameRole(name="role" type="text" style={width:"100%"} placeholder="Role's name")
            .row
              .col-4
                p Description
              .col-8
                .input-group
                  textarea#inputNoteRole(name="note", cols="50", rows="7" placeholder="Note")
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
          button#submitEdit.btn.btn-primary(type="submit" form="editRole") Save
  //modal for grant
  #grant.modal(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog-centered#widther(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Grant Permision
          button#closeMe.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          .row
            .col-9
              h5 Function
              ul#myUL
                li
                  span.caret Function
                  ul.nested
            .col-3
              h5 Action
              .card
                .card-body
                  .table-responsive
                    form#checkboxAction
                      table#action.table.table-bordered.nowrap.hover.row-border.order-column.compact.cell-border.table-striped(width='100%' cellspacing='0')
                        thead
                          tr
                            th ID
                            th Action
        .modal-footer
          button#closeMe2.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
          button#submitCheckboxAction.btn.btn-primary(type="submit" form="checkboxAction") Save
  //detail do later
  //modal for add new user
  #addUser.modal(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog-centered#widther(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title User Adder
          button#closeMe3.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body#rmpadding
          .card#card3
            .card-body
              .table-responsive
                form#addingUser
                  table#dataTableUser.table.table-bordered.nowrap.hover.row-border.order-column.compact.cell-border.table-striped(width='100%' cellspacing='0')
                    thead
                      tr
                        th ID
                        th Username
                        th Full Name
                        th Title
                        th Work At
                        th Description
        .modal-footer
          button#closeMe4.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
          button#submitAddingUser.btn.btn-primary(type="submit" form="addingUser") Add
  // End of Page Wrapper
  // Scroll to Top Button
  a.scroll-to-top.rounded(href='#page-top')
    i.fas.fa-angle-up
  // Logout Modal
  #logoutModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Ready to Leave?
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body Select &quot;Logout&quot; below if you are ready to end your current session.
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
          a.btn.btn-primary(href='/logout') Logout
