  script.
    $(document).ready(function(){
      $("#submit").click(function(e){
        e.preventDefault();
        var username = $("#username").val();
        var password = $("#password").val();
        if(!username){
          alert("Missing Username");
        }else if(!password){
          alert("Missing Password");
        }else{
          $.ajax({
            url:"/",
            method:"POST",
            data:{
              "username":username,
              "password":password
            }
          }).done(function(data){
            if(data == "true"){
              window.location.href = "/dashboard";
            }else{
              alert(data);
            }
          });
        }
      })
    });
