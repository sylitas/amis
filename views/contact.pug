body#page-top
  // Page Wrapper
  #wrapper
    // Sidebar
    include sidebar.contact.pug
    // End of Sidebar
    // Content Wrapper
    #content-wrapper.d-flex.flex-column
      // Main Content
      #content
        // Topbar
        include topbar.contact.pug
        // End of Topbar
        // Begin Page Content
        .container-fluid#noPadding
          .card#card1
            .card-header
              h4.mt-0.font-weight-bold.text-primary All Client
              .row
                .col-12#paddingTop
                  //- button#add.btn.btn-light.btn-icon-split(data-toggle='modal' data-target='#addRole')
                  //-   span.icon.text-gray-600
                  //-     i.fas.fa-plus
                  //-   span.text Create
                  a#add.btn.btn-light.btn-icon-split(href="/contact/create")
                    span.icon.text-gray-600
                      i.fas.fa-plus
                    span.text Create
                  //- button#edit.btn.btn-light.btn-icon-split(data-toggle='modal' data-target='#editer')
                  //-   span.icon.text-gray-600
                  //-     i.fas.fa-edit
                  //-   span.text Edit
                  a#edit.btn.btn-light.btn-icon-split
                    span.icon.text-gray-600
                      i.fas.fa-plus
                    span.text View & Edit
                  button#delete.btn.btn-light.btn-icon-split
                    span.icon.text-gray-600
                      i.fas.fa-trash
                    span.text Delete
                  button#reload.btn.btn-light.btn-icon-split
                    span.icon.text-gray-600
                      i.fas.fa-sync
                    span.text Reload
                  button#export.btn.btn-light.btn-icon-split
                    span.icon.text-gray-600
                      i.fas.fa-file-export
                    span.text Export
            .card-body.card-body-1
              .table-responsive
                table#dataTable-Role.table.table-bordered.nowrap.hover.row-border.order-column.compact.cell-border.display(width='100%' cellspacing='0')
                  thead
                    tr
                      th(width='10%') Name
                      th(width='10%') Phone
                      th(width='16%') Email
                      th(width='15%') Address
                      th(width='7%') Tax
                      th(width='7%') Type of Client
                      th(width='10%') Budget Code
  .invisible_div
    p#check_use=use
    p#check_add=add
    p#check_edit=edit
    p#check_del=del
    p#check_export=exp
  // Scroll to Top Button
  a.scroll-to-top.rounded(href='#page-top')
    i.fas.fa-angle-up
  // Logout Modal
  #logoutModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Ready to Leave?
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body Select &quot;Logout&quot; below if you are ready to end your current session.
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
          a.btn.btn-primary(href='/logout') Logout
